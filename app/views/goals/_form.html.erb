<%= form_with( model: goal, local: true ) do |f| %>

  <% if goal.errors.any? %>
    <div id="error_explanation">
      <h2><%= goal.errors.count %>件のエラーがあります。</h2>
    </div>

    <ul>
      <% goal.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= f.label :name, '目標名' %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :introduce, '目標詳細'%>
    <%= f.text_area :detail, size: "20x10", class: "form-control" %>
  </div>

  <%= f.hidden_field :user_id %>

  <div>
    <%= f.submit '送信' %>
  </div>

<% end %>