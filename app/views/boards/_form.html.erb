<% if board.errors.any? %>
  <div id="error_explanation">
    <h2><%= board.errors.count %>件のエラーがあります。</h2>
  </div>

  <ul>
    <% board.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with( model: board, local: true ) do |f| %>

  <div>
    <%= f.label :title, '掲示板タイトル' %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :detail, '掲示板詳細' %>
    <%= f.text_area :detail, size: "20x10", class: "form-control" %>
  </div>

  <%= f.hidden_field :group_id %>
  <%= f.hidden_field :owner_id, value: current_user.id %>


  <div>
    <%= f.submit '送信' %>
  </div>

<% end %>