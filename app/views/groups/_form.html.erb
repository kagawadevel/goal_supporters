<%= form_with( model: group, local: true ) do |f| %>

  <% if group.errors.any? %>
    <div id="error_explanation">
      <h2><%= group.errors.count %>件のエラーがあります。</h2>
    </div>

    <ul>
      <% group.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= f.label :name, 'グループ名' %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :introduce, 'グループ詳細'%>
    <%= f.text_area :introduce %>
  </div>



  <div>
    <%= f.submit '送信' %>
  </div>

<% end %>